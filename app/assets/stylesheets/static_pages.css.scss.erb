@charset "UTF-8";
/* CSS Document */

/*CSS RESET*/

html, body, div, span, applet, object, iframe, table, caption, tbody, tfoot, thead, tr, th, td, del, dfn, em, font, img, ins, kbd, q, s, samp, small, strike, strong, sub, sup, tt, var, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, big, cite, code, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, footer {
	vertical-align: baseline;
	font-family: inherit;
	font-weight: inherit;
	font-style: inherit;
	text-decoration: inherit;
	color: inherit;
	font-size: 100%;
	outline: 0;
	padding: 0;
	margin: 0;
	border: 0;
	}

/*----------------------------------------
Color Scheme 

Approach: Stark black, white, and gray with bold color accents; color used sparsely for emphasis; use of a lightly cooled 'desert' palette

*/

$white: #ffffff; /* background */
$dark_gray: #444444; /* body text */
$black: #000000; /* emphasized text, hover link */
$medium_gray: #888888; /* secondary text, active link */
$light_gray: #aaaaaa; /* footer text */

$avocado: #aaba50; /* link */
$light_slate: #99a979; /* visited link*/

$brown: #9c7b52; /* old banner header */
$mint: #f0fade; /* footer, iframes background */

$fireglo: #e64056; /* small header */
$pinkish: #ee0068; /* nav1 */
$burnt_orange: #cc6022; /* nav2 */
$goldish: #adb442; /* nav3 */
$slate: #668666; /* nav4 */
	
/* SELECTORS -----------------------------
------------------------------------------
-----------------------------------------*/

/* Globals
------------------------------*/

html	{
	height: 100%;
	width: 100%;
	}
body	{
	height: 100%;
	font: 10px black;
	font-size: 62.5%;
	font-family: "Helvetica Neue", Helvetica, Avantgarde, Arial, sans-serif;
	background: #111 url(<%= asset_path 'AlanKoda_bgstripesfull.png' %>) repeat-y 49.9% 0;
	}
em	{
	color: $black;
	}
h1, h2, h3, h4, h5, h6, h7, h8, h9	{
	font-family: "Helvetica Neue", Helvetica, Avantgarde, Arial, sans-serif;
	color: $black;
	line-height: 1;
	text-align: right;
	margin: 24px auto 12px;
	font-weight: 900;
	}
h1	{
	font-size: 2.2em;
	color: $burnt_orange;
	margin-bottom: 24px;
	}
h2	{
	font-size: 2.6em;
	color: $goldish;
	margin-top: 60px;
	padding-bottom: 8px;
	border-bottom: solid 1px $dark_gray;
	}
/*
h2::before	{
	content: "\2015 ";
	position: relative;
	}
*/
h3	{
	font-size: 1.4em;
	text-align: left;
	margin-top: 16px;
	margin-bottom: 0;
	line-height: 1.2;
	}
h3 em	{
	color: $fireglo;
	}
h3 small	{
	color: $dark_gray;
	font-size: .9em;
	font-style: italic;
	}
h4	{
	text-align: left;
	color: $medium_gray;
	font-size: 1.1em;
	margin: 4px 0 12px;
	font-weight: normal;
	}
h4 em	{
	font-weight: normal;
	font-style: italic;
	color: $medium_gray;
	}
h4 + h4, h4 + h6	{
	margin-top: -6px;
	}
h5	{
	font-size: 1.8em;
	color: $fireglo;
	text-align: left;
	}

h6	{
	font-size: 1.2em;
	color: $dark_gray;
	text-align: left;
	margin-top: 6px;
	margin-bottom: 6px;
	}
ol .tumblr_posts, .tumblr_post, .tumblr_title, .tumblr_link	{
	list-style-type: none;
	}
.tumblr_link {
	font-size: 1.8em;
	}
img+h3, img+h4, img+h5, .backtotop+h5	{
	margin-top: 36px;
	}
a	{
	font-weight: 700;
	color: #88bc50;
	&:visited  {
	  color: $light_slate;
  	}
  &:hover {
    color: $black;
    background-color: inherit;
    }
  &:active {
    color: $medium_gray;
    }
	}
li	{
	list-style-type: disc;
	list-style-position: inside;
	}
em	{
	font-weight: bold;
	}
img	{
	margin: 6px 12px 6px inherit;
	}
img + h4	{
	margin-top: 0px;
	}
iframe	{
	display: block;
	margin: 16px auto;
	background-color: $mint;
	}
footer	{
	color: $light_gray;
	font-family: Helvetica;
	font-size: 1em;
	line-height: 1.4;
	text-align: center;
	display: block;
	margin: 30px auto;
	padding: 6px 0;
	background-color: $mint;
	}
footer a	{
	color: inherit;
	}

/* Navigation
------------------------------*/

nav	{
	font-family: "Helvetica Neue", Helvetica, Avantgarde, Arial, sans-serif;
	font-weight: 900;
	text-transform: uppercase;
	display: block;
	width: auto;
	}
nav ul	{
	text-indent: 0;
	}
nav li	{
	display: inline;
	padding: 4px 6px;
	margin: 0 -4px 0 -6px;
	cursor: pointer;
	list-style: none;
	list-style-position: outside;
	}
nav img	{
	margin: 0 -1px;
	}
	/* Color cycling: Nav
	--------------------------*/
	nav li:hover	{
		color: $pinkish;
		}
	nav li:hover:nth-of-type(2n)	{
		color: $burnt_orange;
		}
	nav li:hover:nth-of-type(3n)	{
		color: $goldish;
		}
	nav li:hover:nth-of-type(4n)	{
		color: $slate;
		}
nav#topnav	{
	font-size: 2.5em;
	margin: 0px auto;
	padding: 11px 1px;
	border-bottom: solid 4px #111;
	}
nav#topnav a {
	color: inherit;
	}
nav#topnav li	{
	margin-right: 10px;
	display: inline;
	} 
nav.subnav	{
	font-size: .7em;
	margin: 0px auto;
	padding: 21px 0px;
	height: 20px;
	display: block;
	position: absolute;
	color: $black;
	}
nav.subnav ul	{
	display: none;
	text-align: left;
	width: 520px;
	}
nav.subnav#contactsubnav ul li, nav.subnav#contactsubnav ul li img	{
	text-transform: none;
	vertical-align: top;
	}
nav li.about:hover #aboutsubnav ul, nav li.work:hover #worksubnav ul, nav li.contact:hover #contactsubnav ul	{
	display: inline;
	top: 150px;
	}
nav.filternav 	{
	font-size: 1.4em;
	text-align: left;
	text-transform: none;
	line-height: 1.8;
	}
nav.filternav li	{
	margin-right: 6px;
	background: $mint;
	}
nav.filternav li:last-of-type	{
	background: none;
	}
.beta, .backtotop	{
	font-size: 0.8em;
	text-transform: none;
	}
.backtotop a	{
	margin-left: 12px;
	}
/*
.backtotop::before	{
	content: "\2192";
	color: $avocado;
	margin-left: 12px;
	}
*/

#sociallinks	{
	float: right;
	}
#sociallinks img	{
	margin: 4px 1px;
	}
	
/* Footer */
footer nav	{
	text-align: center;
	margin-left: auto;
	margin-right: auto;
	}
footer nav a	{
	font-weight: normal;
	}
footer nav li ul {
	display: inline;
}
footer nav#bottomnav ul li ul li:hover	{
	color: $dark_gray;
	font-weight: bold;
	}
footer #credits	{
	margin-top: 8px;
	position: relative;
	left: -16px;
	}
	
/* Content 
------------------------------*/

#gutters	{
	min-width: 100%;
	height: 99.7%;
	}
#container {
	min-height: 100%;
	width: 740px;
	padding: 1px 24px;
	margin-left: auto;
	margin-right: auto;
	background: $white;
	font-family: "Helvetica Neue", Helvetica, Avantgarde, Arial, sans-serif;
	border-right: solid 2px #2a2a2a;
	border-left: solid 2px #2a2a2a;
	}	
#content	{
	display: block;
	margin: 12px auto 0 auto;
	width: 588px;
	}
#content img#bannerimage	{
	float: right;
	margin-top: 12px;
	margin-right: 0;
	cursor: pointer;
	}
#top	{
	display: block;
	}
#banner	{
	width: 588px;
	margin-left: 0;
	}
#bannertext	{
	width: 448px;
	/* background: $mint; */
	}
#banner em	{
	color: $fireglo;
	}
#maintitle	{
	font-size: 10em;
	line-height: .8;
	letter-spacing: -5px;
	font-weight: bold;
	color: #333;
	cursor: pointer;
	}
#contactinfo	{
	color: $light_gray;
	font-size: 1.2em;
	margin: 0;
	display: block;
	font-weight: 400;
	}
#contactinfo li	{
	display: inline;
	margin-right: 3px;
	list-style: none;
	list-style-position: outside;
	}
#contactinfo li:first-of-type	{
	font-size: 1.2em;
	color: $fireglo;
	}
#contactinfo a	{
	color: inherit;
	}
aside	{
	text-align: right;
	font-style: italic;
	font-size: .9em;
	color: $light_gray;
	margin-top: -10px;
	}

/*Sections
------------------------------*/

#home	{
	padding-top: 36px;
	margin-bottom: 60px;
	line-height: 1.4;
	}
#home p	{
	margin: 12px auto;
	font-size: 1.1em;
	}
	/* Color cycling: Headers
	---------------------------*/
	#welcome h1	{
		font-size: 2.6em;
		color: $black;
		letter-spacing: -2px;
		}	
	#welcome h1:nth-of-type(2n)	{
		font-size: 2.85em;
		color: #667666;
		}
	#welcome h1:nth-of-type(3n)	{
		font-size: 3.7em;
		text-align: left;
		color: $pinkish;
		margin-top: -8px;
		}
#home iframe	{
	margin-top: 48px;
	margin-bottom: 24px;
	}
#twidget	{
	margin-top: 48px;
	padding-top: 24px;
	border-top: solid 1px $dark_gray;
	font-size: .8em;
	}
#subcontents	{
	font-family: Helvetica;
	line-height: 1.5;
	font-size: 1.4em;
	color: $dark_gray;
	font-weight: 500;
	padding-top: 12px;
	}
.section	{
	color: inherit;
	font-size: inherit;
	display: block;
	margin: 0 auto;
	border-bottom: solid 1px $dark_gray;
	padding-bottom: 8px;
	/*display: none;*/
	}
.section p {
	display: block;
	margin: 8px auto 12px;
	}
#awards p	{
	color: $medium_gray;
	font-size: 1.1em;
	margin-top: 0px;
	}
#resume ul li, #films ul li	{
	list-style-type: disc;
	list-style-position: inside;
	}
#download	{
	text-align: right;
	line-height: 1;
	margin-top: -10px;
	margin-bottom: -20px;
	}
#films ul ul li	{
	margin-left: 24px;
	list-style-type: circle;
	}
h1.year	{
	padding: 2px 4px 2px 0;
	background: #eee;
	/* cursor: pointer; */
	}
	
/* Visibility Toggle */
.subnav, .section	{
	display: block;
	visibility: visible;
	}
nav.hidden, .section.hidden, .subsection.hidden	{
	display: none;
	}
#topnav li.show ul	{
	display: inline;
	visibility: visible;
	}
#topnav li.show	{
	color: $pinkish;
	}
#topnav li.show:nth-of-type(2n)	{
	color: $burnt_orange;
	}
#topnav li.show:nth-of-type(3n)	{
	color: $goldish;
	}
#topnav li.show:nth-of-type(4n)	{
	color: $slate;
	}
nav.filternav li.selected	{
	color: $white;
	background-color: $fireglo;
	}